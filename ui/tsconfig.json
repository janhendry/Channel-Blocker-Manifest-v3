{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES6",
        "outDir": "../dist/ui",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "paths": {
        "#core/*": [
            "../core/src/*"
        ]
    },
    "include": [
        "./**/*.ts",
        "./../core/src/**/*.ts"
    ],
    "exclude": [
        "../dist"
    ]
}